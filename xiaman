<!-- 替换原有的音频标签为以下内容 -->
<audio id="birthdayMusic" loop>
    <source src="https://www.soundjay.com/misc/sounds/birthday-2.mp3" type="audio/mpeg">
    <source src="https://www.soundjay.com/misc/sounds/birthday-3.mp3" type="audio/mpeg">
    <source src="https://assets.mixkit.co/sfx/preview/mixkit-happy-birthday-to-you-449.mp3" type="audio/mpeg">
</audio>
    
    <script>
        // 当前页面索引
        let currentPage = 0;
        const totalPages = 6; // 中文 + 5种语言
        
        // 音乐控制
        const musicControl = document.getElementById('musicControl');
        const birthdayMusic = document.getElementById('birthdayMusic');
        let isPlaying = false;
        
        // 尝试自动播放音乐（可能需要用户交互）
        function tryPlayMusic() {
            birthdayMusic.play().then(() => {
                isPlaying = true;
                musicControl.innerHTML = '<i class="fa fa-pause text-2xl"></i>';
            }).catch(err => {
                console.log('音乐自动播放失败，需要用户交�?:', err);
            });
        }
        
        // 点击控制音乐播放/暂停
        musicControl.addEventListener('click', () => {
            if (isPlaying) {
                birthdayMusic.pause();
                musicControl.innerHTML = '<i class="fa fa-music text-2xl"></i>';
            } else {
                birthdayMusic.play();
                musicControl.innerHTML = '<i class="fa fa-pause text-2xl"></i>';
            }
            isPlaying = !isPlaying;
        });
        
        // 监听用户交互，一旦有交互就尝试播放音�?
        document.addEventListener('click', tryPlayMusic, { once: true });
        document.addEventListener('touchstart', tryPlayMusic, { once: true });
        
        // 页面导航功能
        function goToPage(pageIndex) {
            // 隐藏当前页面
            document.querySelectorAll('.page')[currentPage].classList.remove('active');
            document.querySelectorAll('.nav-dot')[currentPage].classList.remove('active');
            
            // 更新当前页面索引
            currentPage = pageIndex;
            
            // 显示新页�?
            document.querySelectorAll('.page')[currentPage].classList.add('active');
            document.querySelectorAll('.nav-dot')[currentPage].classList.add('active');
            
            // 触发文字逐行显示动画
            animateLines(currentPage);
        }
        
        // 下一�?
        function nextPage() {
            const nextPageIndex = (currentPage + 1) % totalPages;
            goToPage(nextPageIndex);
        }
        
        // 上一�?
        function prevPage() {
            const prevPageIndex = (currentPage - 1 + totalPages) % totalPages;
            goToPage(prevPageIndex);
        }
        
        // 为导航点添加点击事件
        document.querySelectorAll('.nav-dot').forEach(dot => {
            dot.addEventListener('click', () => {
                const pageIndex = parseInt(dot.getAttribute('data-page'));
                goToPage(pageIndex);
            });
        });
        
        // 为箭头添加点击事�?
        document.querySelector('.right-arrow').addEventListener('click', nextPage);
        document.querySelector('.left-arrow').addEventListener('click', prevPage);
        
        // 键盘导航
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowRight') {
                nextPage();
            } else if (e.key === 'ArrowLeft') {
                prevPage();
            }
        });
        
// 文字逐行显示动画
function animateLines(pageIndex) {
    const page = document.querySelectorAll('.page')[pageIndex];
    // 选择页面中的所有需要动画的元素（包括h1标题和所有段落）
    const elements = page.querySelectorAll('h1, p');
    
    // 先重置所有元�?
    elements.forEach(element => {
        element.classList.remove('fade-in');
        element.classList.add('line-hidden');
    });
    
    // 逐个显示元素
    elements.forEach((element, index) => {
        setTimeout(() => {
            element.classList.remove('line-hidden');
            element.classList.add('fade-in');
        }, 500 + (index * 400)); // 每个元素间隔400ms
    });
}
        
        // 背景效果实现（星星和烟花�?
        const canvas = document.getElementById('backgroundCanvas');
        const ctx = canvas.getContext('2d');
        
        // 设置画布尺寸为窗口大�?
        function resizeCanvas() {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        }
        
        resizeCanvas();
        window.addEventListener('resize', resizeCanvas);
        
        // 星星�?
        class Star {
            constructor() {
                this.reset();
            }
            
            reset() {
                this.x = Math.random() * canvas.width;
                this.y = Math.random() * canvas.height;
                this.radius = Math.random() * 1.5 + 0.3;
                this.alpha = Math.random() * 0.7 + 0.3;
                this.twinkleSpeed = Math.random() * 2 + 1;
            }
            
            update() {
                // 星星闪烁效果
                this.alpha = 0.3 + Math.sin(Date.now() * 0.001 * this.twinkleSpeed) * 0.4;
            }
            
            draw() {
                ctx.save();
                ctx.globalAlpha = this.alpha;
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
                ctx.fillStyle = 'rgba(255, 255, 255, 1)';
                ctx.fill();
                ctx.restore();
            }
        }
        
        // 粒子�?
        class Particle {
            constructor(x, y, hue) {
                this.x = x;
                this.y = y;
                this.hue = hue;
                this.radius = Math.random() * 2 + 1;
                // 减慢粒子速度
                this.speedX = Math.random() * 6 - 3;
                this.speedY = Math.random() * 6 - 3;
                this.gravity = 0.03; // 减小重力影响
                this.friction = 0.97; // 增加摩擦，让粒子减速更�?
                this.alpha = 1;
            }
            
            update() {
                this.speedX *= this.friction;
                this.speedY *= this.friction;
                this.speedY += this.gravity;
                this.x += this.speedX;
                this.y += this.speedY;
                this.alpha -= 0.008; // 减慢消失速度
            }
            
            draw() {
                ctx.save();
                ctx.globalAlpha = this.alpha;
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
                ctx.fillStyle = `hsla(${this.hue}, 100%, 60%, ${this.alpha})`;
                ctx.fill();
                ctx.restore();
            }
        }
        
        // 烟花�?
        class Firework {
            constructor() {
                this.reset();
            }
            
            reset() {
                // 随机位置
                this.x = Math.random() * canvas.width;
                this.y = canvas.height;
                // 减慢烟花上升速度
                this.speedY = Math.random() * 5 + 5;
                this.speedX = Math.random() * 2 - 1;
                this.gravity = 0.07; // 减小重力，让烟花上升更久
                this.hue = Math.random() * 360;
                this.exploded = false;
                this.particles = [];
                // 随机延迟出现，增加浪漫感
                this.delay = Math.random() * 5000;
                this.ready = false;
                
                setTimeout(() => {
                    this.ready = true;
                }, this.delay);
            }
            
            update() {
                if (!this.ready) return;
                
                if (!this.exploded) {
                    this.speedY -= this.gravity;
                    this.y -= this.speedY;
                    this.x += this.speedX;
                    
                    // 当烟花上升速度减慢到一定程度时爆炸（更慢的速度阈值）
                    if (this.speedY < 1) {
                        this.explode();
                        this.exploded = true;
                    }
                } else {
                    // 更新粒子
                    for (let i = this.particles.length - 1; i >= 0; i--) {
                        this.particles[i].update();
                        this.particles[i].draw();
                        
                        // 移除已经消失的粒�?
                        if (this.particles[i].alpha <= 0) {
                            this.particles.splice(i, 1);
                        }
                    }
                    
                    // 当所有粒子消失后重置烟花
                    if (this.particles.length === 0) {
                        this.reset();
                    }
                }
            }
            
            draw() {
                if (!this.ready) return;
                
                if (!this.exploded) {
                    ctx.save();
                    ctx.beginPath();
                    // 绘制拖尾效果
                    ctx.moveTo(this.x, this.y + this.speedY * 2);
                    ctx.lineTo(this.x, this.y);
                    ctx.strokeStyle = `hsla(${this.hue}, 100%, 60%, 0.6)`;
                    ctx.lineWidth = 2;
                    ctx.stroke();
                    
                    ctx.beginPath();
                    ctx.arc(this.x, this.y, 3, 0, Math.PI * 2);
                    ctx.fillStyle = `hsla(${this.hue}, 100%, 60%, 1)`;
                    ctx.fill();
                    ctx.restore();
                }
            }
            
            explode() {
                // 创建更多爆炸粒子，增加浪漫感
                const particleCount = Math.floor(Math.random() * 120) + 80;
                for (let i = 0; i < particleCount; i++) {
                    this.particles.push(new Particle(this.x, this.y, this.hue));
                }
            }
        }
        
        // 创建星星
        const stars = [];
        const starsCount = 200; // 较多的星星数�?
        
        for (let i = 0; i < starsCount; i++) {
            stars.push(new Star());
        }
        
        // 创建烟花（减少数量以增强浪漫感）
        const fireworks = [];
        const fireworksCount = 6;
        
        for (let i = 0; i < fireworksCount; i++) {
            fireworks.push(new Firework());
        }
        
        // 动画循环
        function animate() {
            // 深色背景，创造夜空效�?
            ctx.fillStyle = 'rgba(10, 10, 30, 0.15)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // 更新和绘制所有星�?
            for (let i = 0; i < stars.length; i++) {
                stars[i].update();
                stars[i].draw();
            }
            
            // 更新和绘制所有烟�?
            for (let i = 0; i < fireworks.length; i++) {
                fireworks[i].update();
                fireworks[i].draw();
            }
            
            requestAnimationFrame(animate);
        }
        
        // 初始化第一页的文字动画
        window.addEventListener('load', () => {
            animateLines(0);
        });
        
        // 开始动�?
        animate();
    </script>


</body></html>
